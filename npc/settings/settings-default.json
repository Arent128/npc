// These are the default settings for NPC. They include comments describing what
// each setting does in the program.
//
// DO NOT EDIT THIS FILE.
//
// Instead, put your custom settings in "~/.config/npc/settings.json". The
// command `npc settings campaign` will open it for you. Settings can also be
// put in campaign-specific setting files, for example, in
// "My Campaign/.npc/settings.json".
{
    // Name of the current campaign. This should always be overwritten in by the
    // campaign settings file.
    "campaign": "New Campaign",

    // Command to invoke your text editor of choice. This command must accept a
    // list of files as its command line arguments.
    "editor": "subl",

    // These are the root paths which NPC will use when finding campaign files.
    // The command `npc init` creates all directories within this key. Other
    // commands use specific directories.
    "paths": {

        // The base characters path determines which folder will be searched for
        // character files.
        "characters": "Characters",

        // Paths that will always be ignored. Evaluated relative to the campaign
        // root.
        "ignore": [],

        // The session path is searched for session log files, and is where new
        // ones will be created.
        "session": "Session History",

        // The plot path is searched for plot files, and is where new ones will
        // be created.
        "plot": "Plot"
    },

    // These additional paths are appended to the base character path when
    // creating new character files of the specified type, but only if the named
    // folder already exists.
    "type_paths": {
        "human": "Humans",
        "changeling": "Changelings",
        "fetch": "Fetches",
        "goblin": "Goblins"
    },

    // List of templates
    "templates": {
        //  Character templates indexed by character type. These templates are
        //  copied into the base character path when creating a new character of
        //  their type.
        "human": "templates/Human Character Sheet.nwod",
        "changeling": "templates/Changeling Character Sheet.nwod",
        "fetch": "templates/Fetch Character Sheet.nwod",
        "goblin": "templates/Goblin Character Sheet.nwod",

        // Session template used for making new session entries
        "session": "templates/Session Log.md",

        // Output templates to use when creating character listings.
        "listing": {
            // Templates for the header of a listing, which contain metadata
            // about that listing.
            "header": {
                // Headers for listings in the markdown format
                "markdown": {
                    "mmd": "templates/listing/Header.mmd.mako",
                    "yfm": "templates/listing/Header.yfm.mako"
                },
                // Headers for listings in the html format
                "html": {
                    "meta": "templates/listing/Header.html.meta.mako",
                    "plain": "templates/listing/Header.html.plain.mako"
                }
            },
            // Footers, which appear at the bottom of the listing. So far only
            // used for listings in the html format.
            "footer": {
                "html": "templates/listing/Footer.html.mako"
            },
            // Templates for different character types, split up by the format
            // of the listing. Types that do not have their own template will
            // use the default template instead.
            "character": {
                "markdown": {
                    "default": "templates/listing/Character.md.mako",
                    "changeling": "templates/listing/Changeling.md.mako"
                },
                "html": {
                    "default": "templates/listing/Character.html.mako",
                    "changeling": "templates/listing/Changeling.html.mako"
                }
            },
            // Template for dividing sections within a listing. Currently only
            // used for listings in the html format.
            "section": {
                "html": "templates/listing/Section.html.mako"
            }
        },

        // Template files to use when creating a report in the given format.
        "report": {
            "html": "templates/Report.html.mako",
            "markdown": "templates/Report.md.mako"
        }
    },

    // Text to add to the beginning of new character files.
    "template_header": "",

    // Default file extension for the first plot file of a new campaign.
    "plot_ext": ".md",

    // Default format for generated reports. Recognized formats are markdown,
    // html, and json.
    "report_format": "markdown",

    // Default format to use when creating a list of characters. Recognized
    // formats are markdown or md, html or htm, and json.
    "list_format": "markdown",

    // Default sorting method for character listings. The method "last" sorts by
    // the last word in the character's name, and the method "first" sorts by
    // the first word in the character's name.
    "list_sort": "last",

    // Encoding to use when creating html data for a report or NPC listing. Any
    // valid html charset can be used, but the most common are "ascii" and
    // "utf-8".
    "html_encoding": "ascii",

    // Settings for the generated metadata in character lists.
    "metadata": {
        // Default title for character lists.
        "title": "NPC Listing",

        // Format to use for the metadata timestamp. Uses formatting options
        // from strftime: see http://strftime.org/.
        "timestamp": "%a, %b %d %I:%M%p",

        // Default metadata format to use when metadata is requested for a
        // certain output format.
        "default_format": {
            // The markdown output formatter can add metadata using the
            // MultiMarkdown and Yaml Front Matter formats. To use
            // MultiMarkdown, use the value "mmd". To use Yaml Front Matter, use
            // the values "yfm" or "yaml".
            "markdown": "mmd"
        },

        // Additional metadata keys to include in generated character lists.
        "additional_keys": {
            // Keys listed under "all" will be added to all lists, regardless
            // of the output format.
            "all": {},

            // Metadata given here will only appear in lists generated using the
            // corresponding output format.
            "markdown" : {},
            "json": {},
            "html": {}
        }
    }
}
